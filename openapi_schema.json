{
  "openapi": "3.1.0",
  "info": {
    "title": "画像ディザリングAPI (JSON版)",
    "description": "カラー画像をアップロードし、コントラストを調整してBase64エンコードされたTIFF画像を含むJSONを返します。",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "https://dithering-api.onrender.com",
      "description": "Render.com デプロイサーバー (★ご自身のURLに書き換えてください★)"
    }
  ],
  "paths": {
    "/process-dithering/": {
      "post": {
        "summary": "ディザリング処理の実行 (JSON返却)",
        "operationId": "process_dithering_process_dithering__post",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "処理する画像ファイル (JPG, PNGなど)"
                  },
                  "contrast_factor": {
                    "type": "number",
                    "default": 1.0,
                    "description": "コントラスト係数 (1.0が標準)"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "処理成功。Base64エンコードされたファイルを含むJSONが返されます。",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "filename": {
                      "type": "string"
                    },
                    "file_base64": {
                      "type": "string",
                      "format": "byte",
                      "description": "Base64エンコードされたTIFFファイル"
                    },
                    "mime_type": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}